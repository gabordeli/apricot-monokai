{
	"name": "Apricot monokai theme",
	"colors": {
		"editor.background": "#272822",
		"editor.foreground": "#f8f8f2",
		"editor.lineHighlightBackground": "#323232",
		"tab.activeForeground": "#f8f8f2"
	},
	"tokenColors": [

		//	Basic
		{
			"name": "all",
			"scope": [
				"source"
			],
			"settings": {
				"foreground": "#f8f8f2"
			}
		},
		{
			"name": "Comment block",
			"scope": [
				"comment.line",
				"punctuation.definition.comment",
				"comment.block"
			],
			"settings": {
				"foreground": "#787360"
			}
		},
		{
			"name": "public, static",
			"scope": [
				"storage",
				"keyword",
				"constant"
			],
			"settings": {
				"foreground": "#e70e5e"
			}
		},
		{
			"name": "function name",
			"scope": [
				"entity.name.function",
				"support.function"
			],
			"settings": {
				"foreground": "#99cc33"
			}
		},
		{
			"name": "constants",
			"scope": [
				"constant.numeric"
			],
			"settings": {
				"foreground": "#c256f1"
			}
		},
		{
			"name": "parameter",
			"scope": [
				"variable.parameter",
				"variable.other.readwrite"
			],
			"settings": {
				"foreground": "#fd9721"
			}
		},
		{
			"name": "string",
			"scope": [
				"string.quoted"
			],
			"settings": {
				"foreground": "#ffd230"
			}
		},

		//	PHP support
		{
			"name": "Comment",
			"scope": [
				"comment.line",
				"punctuation.definition.comment.php",
				"comment.block.documentation.phpdoc.php",
				"comment.block.php"
			],
			"settings": {
				"foreground": "#787360",
				"fontStyle": "",
			}
		},
		{
			"name": "Class, interface, namespaces, etc",
			"scope": [
				"entity.name.type.trait.php",
				"entity.name.type.namespace.php",
				"support.class.php",
				"support.other.namespace.php",
				"entity.name.type.class.php",
				"constant.other.php",
				"entity.other.inherited-class.php",
				"support.constant.core.php",
				"support.class.exception.php",
				"entity.name.type.interface.php"
			],
			"settings": {
				"foreground": "#66d9ef"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"storage.modifier",
				"storage.type",
				"keyword.control",
				"keyword.operator",
				"keyword.other.new.php",
				"keyword.other.namespace.php",
				"keyword.other.type.php",
				"keyword.other.use.php",
				"punctuation.section.embedded.begin.php",
				"keyword.other",
				"constant.language.php",
			],
			"settings": {
				"foreground": "#e70e5e"
			}
		},
		{
			"name": "Function, methods",
			"scope": [
				"entity.name.function",
				"support.function"
			],
			"settings": {
				"foreground": "#99cc33"
			}
		},
		{
			"name": "Constants",
			"scope": [
				"constant.numeric.decimal.php",
				"constant.other.class.php"
			],
			"settings": {
				"foreground": "#c256f1",
				"fontStyle": ""
			}
		},
		{
			"name": "Separator",
			"scope": [
				"punctuation.separator.inheritance.php",
				"punctuation.definition.variable.php",
				"meta.function-call.invoke.php"
			],
			"settings": {
				"foreground": "#f8f8f2"
			}
		},
		{
			"name": "Parameter",
			"scope": [
				"meta.function.parameter.typehinted.php",
				"meta.function.parameter.no-default.php",
				"punctuation.definition.variable.php",
				"variable.other.class.php",
				"variable.other.php"
			],
			"settings": {
				"foreground": "#fd9721"
			}
		},

		//	XML support
		{
			"name": "Entity",
			"scope": [
				"entity.name.tag.xml",
				"punctuation.definition.tag.xml",
				"entity.name.tag.localname.xml",
				"punctuation.definition.string.begin.xml"
			],
			"settings": {
				"foreground": "#e70e5e"
			}
		},
		{
			"name": "Attribute",
			"scope": [
				"entity.other.attribute-name.localname.xml",
				"entity.other.attribute-name.xml"
			],
			"settings": {
				"foreground": "#99cc33"
			}
		},
		{
			"name": "Namespace",
			"scope": [
				"entity.other.attribute-name.namespace.xml"
			],
			"settings": {
				"foreground": "#66d9ef"
			}
		},
		{
			"name": "Separator",
			"scope": [
				"punctuation.separator.namespace.xml",
				"meta.tag.xml"
			],
			"settings": {
				"foreground": "#f8f8f2"
			}
		},

		//	JSON
		{
			"name": "Property name",
			"scope": [
				"support.type.property-name.json"
			],
			"settings": {
				"foreground": "#99cc33"
			}
		},
		{
			"name": "Property name begin-end",
			"scope": [
				"punctuation.support.type.property-name.begin.json",
				"punctuation.support.type.property-name.end.json"
			],
			"settings": {
				"foreground": "#f8f8f2"
			}
		},
		

		//	CSS
		{
			"name": "Attribute",
			"scope": [
				"entity.other.attribute-name.class.css",
				"punctuation.definition.entity.css"
			],
			"settings": {
				"foreground": "#e70e5e"
			}
		},
		{
			"name": "Attribute class",
			"scope": [
				"entity.name.tag.css"
			],
			"settings": {
				"foreground": "#fd9721"
			}
		},
		{
			"name": "Property",
			"scope": [
				"support.type.property-name.css",
				"support.type.vendored.property-name.css"
			],
			"settings": {
				"foreground": "#99cc33"
			}
		},
		{
			"name": "Value",
			"scope": [
				"support.constant.property-value.css",
				"constant.numeric.css",
				"keyword.other.unit.rem.css",
				"keyword.other.unit.px.css",
				"constant.other.color.rgb-value.hex.css",
				"keyword.other.unit.percentage.css"
			],
			"settings": {
				"foreground": "#f8f8f2"
			}
		},
		{
			"name": "Important",
			"scope": [
				"keyword.other.important.css"
			],
			"settings": {
				"foreground": "#fd9721",
				"fontStyle": "italic bold underline"
			}
		},
		{
			"name": "Event",
			"scope": [
				"entity.other.attribute-name.pseudo-class.css"
			],
			"settings": {
				"foreground": "#66d9ef"
			}
		}		
	]
}
